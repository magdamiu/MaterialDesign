<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/space_8"
    tools:context="magdamiu.com.materialdesign.MainActivity">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_fabAndSnackbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_card"
        android:elevation="@dimen/space_8"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/round_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/card1" />

        <TextView
            android:id="@+id/tv_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/space_8"
            android:text="@string/fab_and_snackbar"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_20" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cv_collapseToolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_card"
        android:layout_marginTop="@dimen/space_8"
        android:elevation="@dimen/space_8"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/lime"
        app:cardCornerRadius="@dimen/round_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_fabAndSnackbar">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/card2" />

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/space_8"
            android:text="@string/collapse_toolbar"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_20" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
